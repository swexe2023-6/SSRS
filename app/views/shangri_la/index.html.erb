<body class="p-5">
	<div class="row d-flex justify-content-center">
	    <!--ナビゲーションバー-->
        <nav class="navbar navbar-expand bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">SSRS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">サインイン</a>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
              </ul>
            </div>
          </div>
        </nav>
        <!--検索ふぉーむ-->
        <form class="form-inline w-100">
          <div class="col-sm-3 my-1">
            <label class="sr-only" for="inlineFormInputName">タイトル</label>
            <input type="text" class="form-control w-100" id="inlineFormInputName" placeholder="青春ブタ野郎はバニーガール先輩の夢を見ない">
          </div>
          
          <br>
          <div>フィルター</div>
          
          <label class="my-1 mr-2" for="inlineFormCustomSelectPref">放送年度</label>
          <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>指定なし</option>
            <option value="2015">2015</option>
            <option value="2016">2016</option>
            <option value="2017">2017</option>
            <option value="2018">2018</option>
            <option value="2019">2019</option>
            <option value="2020">2020</option>
            <option value="2021">2021</option>
            <option value="2022">2022</option>
            <option value="2023">2023</option>
          </select>
        <br>
          <label class="my-1 mr-2" for="inlineFormCustomSelectPref">放送されるクール</label>
          <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>指定なし</option>
            <option value="1">春</option>
            <option value="2">夏</option>
            <option value="3">秋</option>
            <option value="3">冬</option>
          </select>

          <div class="custom-control custom-checkbox my-1 mr-sm-2">
            <input type="checkbox" class="custom-control-input" id="customControlInline">
            <label class="custom-control-label" for="customControlInline">Remember filter setting</label>
          </div>
      
          <button type="submit" class="btn btn-primary my-1">検索</button>
        </form>
      </div>
        <!--一覧表示-->
      <div class="center-block">アニメ検索
	    <div class="card p-5 w-50">
		
      </div>
